<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/selectable_item_background"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/collection"
            android:layout_width="@dimen/collection_item_dimension"
            android:layout_height="@dimen/collection_item_dimension"
            tools:src="@drawable/collection_test_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/collection_item_dimension"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="De Moda Esta Semana"
                style="@style/titleLarge"
                android:layout_margin="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Los restaurantes mas populares en la ciudad en..."
                style="@style/textMedium"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

